            document.getElementById('form').addEventListener('submit', function(event) {
                event.preventDefault(); 
                window.open(`<%= baseURL%>/${document.getElementById("query").value}`, '_blank');
            });

            function users(){
                window.open(`<%= baseURL%>/get-users`, '_blank');
            }

            function equipamento(){
                window.open(`<%= baseURL%>/get-equipamento`, '_blank');
            }

            function diagrama(){
                window.open(`<%= baseURL%>/assets/schema.jpg`, '_blank');
            }
    </script>
</body>
